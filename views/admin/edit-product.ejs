<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/admin/<%= edit?'edit-product':'add-product'%>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= edit?product.title:null%>">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<%= edit?product.imageUrl:null%>">
      </div>
      <% if(product.imageUrl){ %>
      <div class="card__image">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
      </div>
      <% }  %>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01" value="<%= edit?product.price:null%>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><%= product.description %></textarea>
      </div>
      <% if(edit){ %>
      <input type="hidden" name="id" value="<%= product.id %>">
      <% }  %>

      <button class="btn" type="submit">
        <% if(edit){ %>
        Update Product
        <% } else { %>
        Add Product
        <% }  %>
      </button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>